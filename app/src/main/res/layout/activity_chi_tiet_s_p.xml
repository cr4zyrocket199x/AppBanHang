<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChiTietSPActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbChiTietSP"
        android:background="#F44336"
        app:titleTextColor="#ffff"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/errordisplay_"
            android:id="@+id/ivChiTietSP"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"></ImageView>
        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:textColor="#0000FF"
                    android:textStyle="bold"
                    android:text="Ten San Pham"
                    android:id="@+id/tvTenCTSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:text="Gia San Pham"
                    android:id="@+id/tvGiaCTSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Spinner
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/spinner"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:id="@+id/spGiohang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></Spinner>
                <Button
                    android:text="Thêm giỏ hàng"
                    android:textSize="15sp"
                    android:id="@+id/btThemGioHang"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="5dp"
            android:textColor="#007500"
            android:textSize="30sp"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvChitietSP"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:text="Chi tiết Sản phẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>